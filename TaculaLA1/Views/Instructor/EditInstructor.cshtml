@model TaculaLA1.Models.Instructor

<h2>Edit Instructor</h2>

<form asp-action="EditInstructor" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select asp-for="IsTenured" class="form-control">
            @foreach (var isTenuredOption in Enum.GetValues(typeof(IsTenured)))
            {
                <option value="@isTenuredOption">@isTenuredOption</option>
            }
        </select>
        <span asp-validation-for="IsTenured" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" class="form-control">
            @foreach (var rankOption in Enum.GetValues(typeof(Rank)))
            {
                <option value="@rankOption">@rankOption</option>
            }
        </select>
        <span asp-validation-for="Rank" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Instructor</button>
</form>
