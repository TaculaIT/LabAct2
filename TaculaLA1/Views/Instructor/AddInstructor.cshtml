@model TaculaLA1.Models.Instructor

<form asp-action="AddInstructor" method="post">
   
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="IsTenured">Status</label>
        <select asp-for="IsTenured" class="form-control">
            @foreach (var IsTenured in Enum.GetValues(typeof(IsTenured)))
            {
                <option value="@IsTenured">@IsTenured</option>
            }
        </select>
        <span asp-validation-for="IsTenured" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Rank">Rank</label>
        <select asp-for="Rank" class="form-control">
            @foreach (var rank in Enum.GetValues(typeof(Rank)))
            {
                <option value="@rank">@rank</option>
            }
        </select>
        <span asp-validation-for="Rank" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HiringDate">Hiring Date</label>
        <input type="date" asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
